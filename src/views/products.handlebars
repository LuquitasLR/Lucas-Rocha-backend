<div>
  <div>
     <h1>Bienvenido {{user.mail}}!</h1>
     {{#if user}}
    <a href="/sessions/logout"><button>Logout!</button></a>
  {{/if}}
  </div>
   <h2>Lista de productos disponibles:</h2>
 <ol>{{#each paginatedProducts}}
    <li>
        <h3>Producto: {{this.title}}</h3>
        <h4>ID:</h4> <p>{{this._id}}</p>
        <h4>Descripción:</h4><p>{{this.description}}</p>
        <h3>Precio: ${{this.price}}</h3>
    </li>
    <hr/>
    {{/each}}
    <form id="addProductForm">
      <h3>Agregar productos:</h3>
      <label for="cartId">Cart ID:</label>
    <input type="text" id="cartId"value={{userCart}} readonly>
    <label for="productId">Product ID:</label>
    <input type="text" id="productId"> 
    <label for="quantity">Cantidad:</label>
    <input type="number"required="true" style="width: 35px" id="quantity" min="0">
    <button type="button" onclick="addProduct()">Agregar</button>
    <a href="/cart"><button type="button">Ver Carrito</button></a>
    </form>
 </ol>
 <h3>paginacion</h3>
<p>
  {{#if hasPrevPage}}
    <a style='text-decoration: none;' href='/products?querypage={{prevPage}}'>⬅️{{prevPage}}  - - - -  </a>
  {{/if}}
  pagina
  {{page}}
  de
  {{totalPages}}
  {{#if hasNextPage}}
    <a style='text-decoration: none;' href='/products?querypage={{nextPage}}'>  - - - -  {{nextPage}}➡️</a>
  {{/if}}
</p>
</div>
<script src="/js/addProduct.js"></script>